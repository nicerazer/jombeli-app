<% include partials/header %>

<div class="content-wrapper">
  <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/dashboard">Dashboard</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/dashboard/products">Product</a>
      </li>
      <li class="breadcrumb-item active">New</li>
    </ol>
    <div class="row">
      <div class="col-12">
        <h1>Add a new product</h1>
        <!--<p>This is an example of a blank page that you can use as a starting point for creating new ones.</p>-->
        <form action="/dashboard/products" method="POST">
          <div class="row">
            <div class="col-sm-6">
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title">Product basics</h5>

                  <!--FORM BASICS-->
                  <div class="form-row">
                    <div class="col-8 form-group">
                      <input name="product[title]" type="text" class="form-control" id="inputTitle" placeholder="Title">
                    </div>
                    <div class="col-4 form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <div class="input-group-text">RM</div>
                        </div>
                        <input name="product[price]" type="number" class="form-control" id="inputPrice" placeholder="Price" value="10">
                      </div>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label>Description</label>
                    <textarea name="product[description]" type="text" class="form-control" placeholder="A brief of product..." rows="7"></textarea>
                  </div>
                  
                </div>
              </div>

              <!--Image upload box-->
              <div class="card mb-3">
                <div class="card-body">
                  <div class="custom-file">
                    <input name="product[imgUrl]" type="file" class="custom-file-input" id="imageFile">
                    <label class="custom-file-label" for="imageFile">Upload Images</label>
                  </div>
                </div>
              </div>
              
            </div>
            <!--RIGHT SIDE FORM HERE-->
            <div class="col-sm-6">
              
              <div class="card bg-dark text-white mb-3">

                <div class="card-body">
                  <div class="form-group">
                    <label>Brand</label>
                    <input name="product[brand]" type="text" class="form-control" id="inputDescription" placeholder="Enter product brand" rows="7"></input>
                  </div>
  
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label>Model</label>
                      <input name="product[model]" type="text" class="form-control"></input>
                    </div>
                    <div class="form-group col-md-6">
                      <label>Manufacturer</label>
                      <input name="product[manufacturer]" type="text" class="form-control"></input>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label>Made in</label>
                    <input name="product[madein]" type="text" class="form-control"></input>
                  </div>
                  
                </div>
              </div>
          
              <div class="card bg-info text-white mb-3">
                <div class="card-body">
                  <div class="form-group">
                    <label for="inputCategory">Category</label>
                    
                    <select name="product[category]" class="form-control" id="inputCategory">
                      <option value="clothings">Clothings</option>
                      <option value="accessories">Accessories</option>
                      <option value="shoes">Shoes</option>
                      <option value="bags">Bags</option>
                      <option value="sports">Sports</option>
                      <option value="watches">Watches</option>
                      <option value="groomings">Groomings</option>
                      <option value="electronics">Electronics</option>
                    </select>
                  </div>
    
                  <div class="form-group">
                    <label>Material</label>
                    <input name="product[specs.material]" type="text" class="form-control" id="inputDescription" placeholder="Enter product brand" rows="7"></input>
                  </div>
  
                  <div class="form-row">
                    <div class="col-md-6 form-group">
                      <label>Size</label>
                      <input name="product[specs.size]" type="number" class="form-control"></input>
                    </div>
                    
                    <div class="form-group col-md-6">
                      <label>Weight</label>
                      <div class="input-group">
                        <input name="product[specs.weight]" type="number" class="form-control" id="inputPrice" placeholder="Price" value="5">
                        <div class="input-group-prepend">
                          <div class="input-group-text">KG</div>
                        </div>
                      </div>
                    </div>
                  </div>  
                      
                </div>
              </div>
              
              <div class="card">
                <div class="card-body">
                  
                  <div class="form-group row">
                    <div class="col-sm-2">Active</div>
                    <div class="col-sm-10">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkActive" name="product[isActive]">
                        <label class="form-check-label" for="checkActive">
                          Yes
                        </label>
                      </div>
                    </div>
                  </div>
                  
                  <div class="form-row">
                     <div class="col-5 form-group">
                      <label for="inputDiscount">Discounts</label>
                      <div >
                      <select name="product[discount]" class="form-control" id="inputDiscount">
                        <option value="5">5%</option>
                        <option value="10">10%</option>
                        <option value="20">20%</option>
                        <option value="50">50%</option>
                        <option value="70">70%</option>
                      </select>
                      </div>
                    </div>  
                  </div>                  
                </div>
              </div>
                
              <button type="submit" class="mb-5 btn btn-outline-primary btn-block">Add!</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

<%include partials/footer%>